/*******************************
            Grid
*******************************/

.grid.is-amenities > .row {
  padding: 0;

  > .column {
    padding: (@gutterWidth / 2);
  }
}

/*--------------
   Variations
---------------*/

/*
  Column with only horizontal padding
*/
.ui.grid > .column.only-horizontal-padding {
  padding: 0 (@gutterWidth / 2);
}
