  /* Form */
  &.has-form {
    margin: @hasFormMargin;
    max-width: @hasFormMaxWidth;
    overflow: visible;
    padding: @hasFormPadding;

    @media @mobileScreen {
      padding: @hasFormMobilePadding;
    }

    & > .content {
      padding: @hasFormContentPadding;

      & > .header {
        margin: @hasFormHeaderMargin;

        @media @mobileScreen {
          margin: @hasFormMobileHeaderMargin;
        }
      }
    }
  }

  /* Featured */
  &.has-featured {
    display: inline-flex;
    height: @featuredHeight;
    margin-right: @featuredMarginRight;
    max-width: @featuredMaxWidth;
    min-width: @featuredMinWidth;
    width: 100%;

    .content {

      > .meta,
      > .header .ui.header,
      > .description {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
    }

    img {
      flex-grow: @featuredImageFlexGrow;
    }
  }

  /* Search Result */
  &.has-search-result {
    display: inline-flex;
    height: @searchResultHeight;
    margin: 0 @searchResultMargin @searchResultMargin 0;
    width: @searchResultWidth;

    @media @tinyScreen {
      width: 100%;
      margin-right: 0;
    }

    > .flex-container {
      position: relative;

      > .ui.raised.segment {
        background-color: var(@themeActionColorIdentifier, @themeActionColorDefault);
        position: absolute;
        right: 0;
        bottom: 0;
        margin: @searchResultLabelMargin;
        border-radius: @searchResultLabelBorderRadius;
        padding: @searchResultLabelPadding;
        padding-top: @searchResultLabelPaddingTop;
        display: flex;
        flex-direction: column;
        align-items: center;

        .ui.header {
          margin: 0;
          font-size: @searchResultLabelPriceFontSize;
          height: @searchResultLabelPriceHeight;
          line-height: @searchResultLabelPriceLineHeight;
        }

        p {
          margin-right: @searchResultLabelTextMargin;
          color: @black;
        }

        .ui.label {
          padding: @searchResultLabelPeriodTextPadding;
          background: transparent;
          border-radius: @searchResultLabelPeriodBorderRadius;
          box-shadow: @searchResultLabelPeriodBoxShadow;
          color: @black;
        }
      }
    }

    .content {
      padding: @searchResultContentPadding;
      padding-top: @searchResultContentPaddingTop;

      .description {
        margin-top: 0;
        font-size: @searchResultDescriptionFontSize;
      }

      > .meta,
      > .header .ui.header,
      > .description {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
    }

    img {
      flex-grow: @featuredImageFlexGrow;
    }

    .placeholder.block.rectangle {
      padding-top: @searchResultPlaceholderPadding;

      @media @tinyScreen {
        padding-top: @mobileSearchResultPlaceholderPadding;
      }
    }
  }

