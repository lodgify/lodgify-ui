/* Horizontal Group with wrap */
@horizontalWrapFlex: 0 1 auto;
@horizontalWrapMarginBottom: @10px;

/* Full bleed */
@backgroundImageGradient: linear-gradient(0deg, rgba(255, 255, 255, 0) 51%, rgba(0, 0, 0, 0.5) 100%);
@fullBleedBottomOffsetIdentifier: '--full-bleed-bottom-offset';

/* Is Summary */
@summaryLocationNameMaxWidth: 185px;
@placeholderWrapperWidth: 150px;
@placeholderWrapperPaddingTop: @5px;
@placeholderMarginRight: 1em;

/* Is Promotion */
@promotionBackgroundColor: @yellow;
@promotionBorderRadius: @3px;
@promotionMinHeight: 200px;
@promotionHoverBlur: blur(3px);
@promotionBackgroundOffset: (-1 * @5px);

@promotionOverlayTransitionTime: 0.3s;
@promotionOverlayOpacity: 0.3;

@promotionStackedMinHeight: 275px;
@promotionStackedHeadingMarginTop: @15px;
@promotionStackedDiscountPadding: @10px 0 @20px;

@promotionZIndex: @zIndexLevelOne;
@promotionBeforeLayerZIndex: @promotionZIndex + 1;
@promotionAfterLayerZIndex: @promotionBeforeLayerZIndex + 1;
@promotionContentLayerZIndex: @promotionAfterLayerZIndex + 1;

/* Is Hero */
@heroZIndex: @zIndexLevelOne;
@heroImageZIndex: @heroZIndex + 1;
@heroGradientZIndex: @heroImageZIndex + 1;
@heroContentZIndex: @heroGradientZIndex + 1;
@heroHeaderZIndex: @heroContentZIndex + 1;
