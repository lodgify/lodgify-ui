/* Icon */
.ui.button > .icon:not(.button) > svg {
  margin: @iconSvgMargin;
}

.ui.button.circular,
.ui.button {
  display: flex;
  justify-content: center;
  align-items: center;

  > .icon {
    width: auto;
  }
}

