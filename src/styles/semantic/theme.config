/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'livingstone';
@reset      : 'default';

/* Elements */
@button     : 'livingstone';
@container  : 'livingstone';
@divider    : 'livingstone';
@flag       : 'default';
@header     : 'livingstone';
@icon       : 'livingstone';
@image      : 'livingstone';
@input      : 'livingstone';
@label      : 'livingstone';
@list       : 'livingstone';
@loader     : 'default';
@rail       : 'default';
@reveal     : 'default';
@segment    : 'livingstone';
@step       : 'default';

/* Collections */
@breadcrumb : 'default';
@form       : 'livingstone';
@grid       : 'livingstone';
@menu       : 'livingstone';
@message    : 'livingstone';
@table      : 'livingstone';

/* Modules */
@accordion  : 'default';
@checkbox   : 'livingstone';
@dimmer     : 'livingstone';
@dropdown   : 'livingstone';
@embed      : 'default';
@modal      : 'livingstone';
@nag        : 'default';
@popup      : 'livingstone';
@progress   : 'default';
@rating     : 'livingstone';
@search     : 'default';
@shape      : 'default';
@sidebar    : 'livingstone';
@sticky     : 'default';
@tab        : 'default';
@transition : 'default';

/* Views */
@ad         : 'default';
@card       : 'livingstone';
@comment    : 'default';
@feed       : 'default';
@item       : 'livingstone';
@statistic  : 'livingstone';

/* Third party components */
@react-dates-datepicker : 'default';
@react-player           : 'default';
@react-image-gallery    : 'default';

/* Lodgify UI components */
@block-placeholder : 'default';
@filter-trigger : 'default';
@flex-container : 'default';
@html : 'default';
@property-page-search-bar : 'default';
@range                    : 'default';
@thumbnail                : 'default';
@text-placeholder         : 'default';
@search-bar               : 'default';
@quote                    : 'default';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/*******************************
         Import Theme
*******************************/

@import "theme.less";

/* End Config */
